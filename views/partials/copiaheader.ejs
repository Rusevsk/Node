</head>

<body>
    <div class="container-fluid">
        <div class="banner"></div>
        <div class="row">
            <!-- Botón de alternar para mostrar/ocultar la barra lateral -->
            <button class="btn btn-primary d-md-none" id="sidebarToggle">
                <i class="bi bi-list"></i> <!-- Icono cuando la barra lateral está oculta -->
                <i class="bi bi-list-ul d-none"></i> <!-- Icono cuando la barra lateral está visible -->
            </button>
            <!-- Barra lateral -->
            <div id="sidebar" class="col-md-2">
                <!-- Contenido de la barra lateral con iconos -->
                <ul>
                    <li><a href="#"><i class="bi bi-house"></i> <span class="d-none d-md-inline">Inicio</span></a></li>
                    <li><a href="#"><i class="bi bi-music-player"></i> <span class="d-none d-md-inline">Radio</span></a></li>
                    <!-- Agrega otros elementos de menú aquí -->
                </ul>
            </div>
            <!-- Contenido principal -->
            <div id="content" class="col-md-10 col-12">
                <!-- Contenido principal de la página -->
            </div>
        </div>


