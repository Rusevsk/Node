<!DOCTYPE html>
<html lang="es">

<head>
    <title>Reproductor Nativo con Control de Velocidad</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <!-- Custom Styles -->
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
    <!-- DateTimePicker CSS -->
    <link href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.37/css/bootstrap-datetimepicker.css" rel="stylesheet"/>
    <link rel="stylesheet" href="css/videoscript.css">
</head>

<body class="bg-light">
    <div class="container mt-5">

        <!-- Sección de Navegación por Fecha -->
        <div class="row mb-4">
            <div class="col-md-12">
                <h3>Navegación por fecha</h3>
                <div class="row">
                    <div class="col-md-3">
                        <label for="yearSelect">Año:</label>
                        <select id="yearSelect" onchange="loadMonthsForSelectedYear()" class="form-control"></select>
                    </div>
                    <div class="col-md-3">
                        <label for="monthSelect">Mes:</label>
                        <select id="monthSelect" onchange="loadChannelsForSelectedMonth()" class="form-control"></select>
                    </div>
                    <div class="col-md-3">
                        <label for="channelSelect">Canal:</label>
                        <select id="channelSelect" onchange="loadDaysForSelectedChannel()" class="form-control"></select>
                    </div>
                    <div class="col-md-3">
                        <label for="daySelect">Día:</label>
                        <select id="daySelect" onchange="loadRecordingsForSelectedDay()" class="form-control"></select>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <!-- Sección de Video y Cortador -->
            <div class="col-md-8">
                <!-- Reproductor de video -->
                <div id="videoContainer" class="mb-4 text-center">
                    <video id="videoPlayer" controls class="w-100" style="max-height: 360px;">
                        Tu navegador no soporta el elemento de video.
                    </video>
                    <button id="prevVideoButton" onclick="playPreviousVideo()">Anterior</button>
                    <button id="nextVideoButton" onclick="playNextVideo()">Siguiente</button>

                </div>



                <!-- Cortador de video -->
                <div id="videoCutter">
                    <h3>Cortador de Video</h3>
                    <div class="row">
                        <div class="col-md-3">
                            <label for="startMinute">Inicio:</label>
                            <input type="number" id="startMinute" name="startMinute" class="form-control" placeholder="mm" min="0" max="59">
                        </div>
                        <div class="col-md-3">
                            <label for="startSecond">&nbsp;</label>
                            <input type="number" id="startSecond" name="startSecond" class="form-control" placeholder="ss" min="0" max="59">
                        </div>
                        <div class="col-md-3">
                            <label for="endMinute">Fin:</label>
                            <input type="number" id="endMinute" name="endMinute" class="form-control" placeholder="mm" min="0" max="59">
                        </div>
                        <div class="col-md-3">
                            <label for="endSecond">&nbsp;</label>
                            <input type="number" id="endSecond" name="endSecond" class="form-control" placeholder="ss" min="0" max="59">
                        </div>
                    </div>
                    <div class="mt-3">
                        <button onclick="cutVideo()" class="btn btn-primary">Cortar y Descargar</button>
                </div>
                </div>
            </div>

            <!-- Sección de Navegación -->
            <div class="col-md-4">
                <div id="contentList" style="max-height: 400px; overflow-y: scroll;">
                    <!-- Lista de directorios y videos -->
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.15.2/moment.min.js"></script>
    <script src="videoscript.js"></script>
</body>
</html>
