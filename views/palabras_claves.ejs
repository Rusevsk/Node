<%- include('partials/header', { title: 'Palabras Claves', user: user }) %>
<div class="col-12 col-lg-10 main-content">
    <h1>Palabras Claves</h1>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addWordModal">
            Agregar Palabra
    </button>
    <div id="palabrasClavesContainer" style="max-height: 400px; overflow-y: scroll; padding: 15px; border: 1px solid #ccc;">
        <ul class="list-group mb-4">
            <% palabrasClaves.forEach(palabraClave => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span><strong><%= palabraClave.palabra %></strong></span>
                    <span class="text-muted">Palabra Cercana: <%= palabraClave.palabra_cercana %></span>
                    <a href="/palabras-claves/<%= clienteId %>/eliminar/<%= palabraClave.id %>" class="btn btn-danger btn-sm">Eliminar</a>
                </li>
            <% }); %>
        </ul>
    </div>
</div>
<%- include('partials/add_word_modal', { clienteId: clienteId }) %>
<%- include('partials/footer') %>
