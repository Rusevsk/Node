<%- include('partials/header', { title: 'Configuración', user: user }) %>
<div class="col-12 col-lg-10 main-content">
    <h1>Configuración de Filtros</h1>
    <button type="button" class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#addFilterModal">Agregar Filtro</button>
    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% filtros.forEach(filtro => { %>
                <tr>
                    <td><%= filtro.nombre %></td>
                    <td><%= filtro.descripcion %></td>
                    <td>
                        <a href="/clientes/configuracion/<%= clienteId %>/editar-filtro/<%= filtro.id %>" class="btn btn-warning btn-sm">Editar</a>
                        <a href="/clientes/configuracion/<%= clienteId %>/eliminar-filtro/<%= filtro.id %>" class="btn btn-danger btn-sm">Eliminar</a>
                        <a href="/clientes/configuracion/<%= clienteId %>/filtro/<%= filtro.id %>/agregar-palabras" class="btn btn-success btn-sm">Agregar Palabras</a>
                    </td>

                </tr>
            <% }); %>
        </tbody>
    </table>
</div>
<%- include('partials/add_filter_modal', { clienteId: clienteId }) %>
<%- include('partials/footer') %>
