<%- include('partials/header', { title: 'Editar Usuario', user: user }) %>

<div class="col-12 col-lg-10 main-content">
    <h1>Editar Usuario</h1>
    <form action="/editar-usuario/<%= userToEdit.ID %>" method="post">
        <div class="form-group">
            <label for="username">Nombre de usuario:</label>
            <input type="text" class="form-control" id="username" name="username" value="<%= userToEdit.Username %>" required>
        </div>
        <div class="form-group">
            <label for="password">Contraseña:</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Deja en blanco para mantener la misma contraseña">
        </div>
        <div class="form-group">
            <label for="role">Rol:</label>
            <select name="role" class="form-control">
                <% if (user.roleName === 'admin') { %>
                    <option value="1" <%= userToEdit.role_id === 1 ? 'selected' : '' %>>Admin</option>
                    <option value="2" <%= userToEdit.role_id === 2 ? 'selected' : '' %>>Auditor</option>
                    <option value="3" <%= userToEdit.role_id === 3 ? 'selected' : '' %>>Cliente</option>
                <% } %>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Guardar cambios</button>
    </form>
</div>

</div> <!-- Fin de la fila -->
</div> <!-- Fin del contenedor -->

<%- include('partials/footer') %>
